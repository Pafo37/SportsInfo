<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.pavelkovachev.sportsinfo.R" />

        <variable
            name="viewModel"
            type="com.pavelkovachev.sportsinfo.ui.fragment.leagues.LeaguesViewModel" />

    </data>

    <com.pavelkovachev.sportsinfo.view.LoadingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:setProgressBarVisibility="@{viewModel.getProgressBarVisibility()}"
        app:setTextViewVisibility="@{viewModel.getTextViewVisibility()}">

        <android.support.v7.widget.RecyclerView
            android:layout_width="@dimen/no_dimens"
            android:layout_height="@dimen/no_dimens"
            android:layout_margin="@dimen/default_margin_between_elements"
            app:items="@{viewModel.getLeaguesList()}"
            app:layoutId="@{R.layout.item_leagues}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:vm="@{viewModel}"
            tools:listitem="@layout/item_leagues" />

    </com.pavelkovachev.sportsinfo.view.LoadingView>
</layout>